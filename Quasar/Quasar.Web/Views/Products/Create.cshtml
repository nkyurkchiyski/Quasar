@{
    @using Quasar.Models.Enums

    ViewData["Title"] = "Create Product";

    var types = Enum.GetNames(typeof(ProductType)).ToArray();
    var categories = Enum.GetNames(typeof(Category)).ToArray();
    var platforms = Enum.GetNames(typeof(Platform)).ToArray();
}
@model Quasar.Web.Models.Products.ProductViewModel

<h1 class="text-center">Create</h1>
<form class="mx-auto text-left" enctype="multipart/form-data" method="post" asp-controller="Products" asp-action="Create">
    <div>
        <h4>Product Details</h4>
        <hr />
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Name...">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" rows="6" class="form-control" placeholder="Description..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col form-group">
                <label asp-for="TotalQuantity">Quantity</label>
                <input asp-for="TotalQuantity" type="number" step="1" class="form-control" placeholder="Quantity...">
                <span asp-validation-for="TotalQuantity" class="text-danger"></span>
            </div>
            <div class="col form-group">
                <label asp-for="Price">Price</label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Price...">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col form-group">
                <label asp-for="Category">Category</label>
                <select class="form-control" asp-for="Category">
                    @foreach (var c in categories)
                    {
                        <option>@c</option>
                    }
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="col form-group">
                <label asp-for="Type">Type</label>
                <select class="form-control" asp-for="Type">
                    @foreach (var t in types)
                    {
                        <option>@t</option>
                    }
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="col form-group">
                <label asp-for="Platform">Platform</label>
                <select class="form-control" asp-for="Platform">
                    @foreach (var p in platforms)
                    {
                        <option>@p</option>
                    }
                </select>
                <span asp-validation-for="Platform" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div>
        <h4>Images</h4>
        <hr />
        <div class="row">
            <div class="col form-group">
                <label asp-for="CoverImage">Cover Image</label>
                <input type="file" asp-for="CoverImage" />
            </div>
            <div class="col form-group">
                <label asp-for="Images">Images</label>
                <input type="file" asp-for="Images" multiple />
            </div>
        </div>
    </div>
    <div class="button-holder d-flex justify-content-center my-5">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>