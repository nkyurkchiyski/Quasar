@{
    @using Quasar.Web.Models.Products

    ViewData["Title"] = "Home Page";
    @model Quasar.Web.Models.Home.IndexViewModel

}


<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="https://res.cloudinary.com/nkyurkchiyski/image/upload/v1543615550/Quasar/src/download.jpg"/>
            <div class="carousel-caption">
                <h2 class="text-black">Cyberpunk 2077</h2>
            </div>
        </div>
        <div class="item">
            <img src="https://res.cloudinary.com/nkyurkchiyski/image/upload/c_crop,h_1072,w_2560,x_0,y_150/v1543616464/Quasar/src/far-cry-3-5k-nb-2560x1440.jpg"/>
            <div class="carousel-caption">
                <h2 class="text-black">Far Cry 3</h2>
            </div>
        </div>
        <div class="item">
            <img src="https://res.cloudinary.com/nkyurkchiyski/image/upload/c_crop,h_1072,w_2560,x_430,y_190/v1543615546/Quasar/src/ForzaMotorsport7_Preview_PosingByTheCars-e1507023679457.jpg" />
            <div class="carousel-caption">
                <h2 class="text-black">Forza Motorsport</h2>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div class="container my-5" style="width:100%;">
    <ul class="nav nav-tabs">
        <li class="active"><a class="text-quasar" data-toggle="tab" href="#menu1">Top Selling</a></li>
        <li><a class="text-quasar" data-toggle="tab" href="#menu2">New</a></li>
        <li><a class="text-quasar" data-toggle="tab" href="#menu3">Editor's Choice</a></li>
    </ul>

    <div class="tab-content">
        <div id="menu1" class="tab-pane fade in active">
            @{
                var topProducts = Model.TopProducts.Select(x => (DisplayProductViewModel)x).ToList();
                <partial name="~/Views/Shared/_DisplayProductsPartial.cshtml" model="topProducts" />
            }
        </div>
        <div id="menu2" class="tab-pane fade">
            @{
                var newProducts = Model.NewProducts.Select(x => (DisplayProductViewModel)x).ToList();
                <partial name="~/Views/Shared/_DisplayProductsPartial.cshtml" model="newProducts" />
            }
        </div>
        <div id="menu3" class="tab-pane fade">
            @{
                var editorsProducts = Model.EditorsChoiceProducts.Select(x => (DisplayProductViewModel)x).ToList();
                <partial name="~/Views/Shared/_DisplayProductsPartial.cshtml" model="editorsProducts" />
            }
        </div>
    </div>
</div>
